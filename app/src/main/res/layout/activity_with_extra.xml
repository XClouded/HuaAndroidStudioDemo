<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">


    <TextView
        android:id="@+id/extraTextView"
        style="@style/titleFont1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:paddingLeft="6dp"
        android:text=""
        android:textColor="@color/black1"/>


    <TextView
        android:id="@+id/title"
        style="@style/titleFont1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:maxHeight="50dp"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingLeft="6dp"
        android:paddingTop="5dp"
        android:text="啊零度空间阿隆索肯德基阿莱克斯大家来啊搜房卡死机了发卡就是浪费卡机罗斯福卡洛斯开发了"
        android:textColor="@color/black1"/>




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入关键字"
            />

        <TextView
            android:id="@+id/text_color"
            android:layout_width="fill_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_color1"
            android:drawablePadding="2dp"
            android:text="妈妈  **圈哈哈KKMM[]sss哈啦啦33啦德......“”玛西D亚  的圈圈ABC好样55的"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/text_color1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/vote_tip"
            android:text=""
            android:layout_marginTop="80dp"
            android:textSize="24sp"/>


    </FrameLayout>


    <TextView
        android:id="@+id/share_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:drawablePadding="3dp"
        android:drawableTop="@drawable/share_icon1_bg"
        android:gravity="center"
        android:text="微信"
        android:textColor="@color/black2"
        android:textSize="12sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.hua.view.WheelView
            android:id="@+id/passw_1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <com.hua.view.WheelView
            android:id="@+id/passw_2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginTop="30dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="微信大sa"
        android:textColor="@color/black2"
        android:background="@drawable/layout_list_color_shape"
        android:textSize="20sp"/>


</LinearLayout>