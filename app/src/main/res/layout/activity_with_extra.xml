<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <TextView
        android:id="@+id/extraTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="1吗3raTextView"
        android:textSize="24sp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_color"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_color1"
            android:drawablePadding="2dp"
            android:text="e妈妈妈妈妈妈圈妈妈妈圈妈妈妈圈妈妈妈圈妈妈妈圈妈妈妈圈妈妈妈圈妈妈妈圈妈圈"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/text_color1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/vote_tip"
            android:text=""
            android:textSize="24sp"/>


    </FrameLayout>


    <TextView
        android:id="@+id/share_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:drawablePadding="3dp"
        android:drawableTop="@drawable/share_icon1_bg"
        android:gravity="center"
        android:text="微信"
        android:textColor="@color/black2"
        android:textSize="12sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.hua.view.WheelView
            android:id="@+id/passw_1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <com.hua.view.WheelView
            android:id="@+id/passw_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


</LinearLayout>