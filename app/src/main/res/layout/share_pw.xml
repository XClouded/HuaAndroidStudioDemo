<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/out_side"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@color/share_bg"/>

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/share_bg">

            <LinearLayout
                android:id="@+id/share_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/share_icon_size"
                    android:layout_height="@dimen/share_icon_size"
                    android:src="@drawable/share_icon1_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="微信"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/share_tv1"
                android:layout_toRightOf="@id/share_tv1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/share_icon_size"
                    android:layout_height="@dimen/share_icon_size"
                    android:src="@drawable/share_icon2_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="朋友圈"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/share_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/share_tv2"
                android:layout_toRightOf="@id/share_tv2"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/share_icon_size"
                    android:layout_height="@dimen/share_icon_size"
                    android:src="@drawable/share_icon3_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="新浪微博"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/share_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/share_tv1"
                android:layout_alignRight="@id/share_tv1"
                android:layout_below="@id/share_tv1"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/share_icon_size"
                    android:layout_height="@dimen/share_icon_size"
                    android:src="@drawable/share_icon5_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="QQ空间"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/share_tv2"
                android:layout_alignRight="@id/share_tv2"
                android:layout_alignTop="@id/share_tv4"
                android:layout_below="@id/share_tv2"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/share_icon_size"
                    android:layout_height="@dimen/share_icon_size"
                    android:src="@drawable/share_icon7_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="QQ"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/share_tv3"
                android:layout_alignRight="@id/share_tv3"
                android:layout_alignTop="@id/share_tv4"
                android:layout_below="@id/share_tv3"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="@dimen/share_icon_size"
                    android:layout_height="@dimen/share_icon_size"
                    android:src="@drawable/share_icon4_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="朋友动态"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/share_tv6"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="举报"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/bt_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/report"
                android:layout_marginTop="10dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@drawable/share_x"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>