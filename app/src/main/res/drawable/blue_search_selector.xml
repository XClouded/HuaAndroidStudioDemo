<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/search_select"/>

            <stroke android:width="1dp" android:color="@color/gray12"/>

            <padding android:bottom="@dimen/search_padding_top" android:left="@dimen/search_padding_left"
                     android:right="@dimen/search_padding_left" android:top="@dimen/search_padding_top"/>
            <corners android:radius="@dimen/choiceInterest_radius"/>

        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/search_select"/>

            <stroke android:width="1dp" android:color="@color/gray12"/>
            <padding android:bottom="@dimen/search_padding_top" android:left="@dimen/search_padding_left"
                     android:right="@dimen/search_padding_left" android:top="@dimen/search_padding_top"/>
            <corners android:radius="@dimen/choiceInterest_radius"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/search_select"/>

            <stroke android:width="1dp" android:color="@color/gray12"/>

            <padding android:bottom="@dimen/search_padding_top" android:left="@dimen/search_padding_left"
                     android:right="@dimen/search_padding_left" android:top="@dimen/search_padding_top"/>
            <corners android:radius="@dimen/choiceInterest_radius"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF"/>
            <stroke android:width="1dp" android:color="@color/gray12"/>

            <padding android:bottom="@dimen/search_padding_top" android:left="@dimen/search_padding_left"
                     android:right="@dimen/search_padding_left" android:top="@dimen/search_padding_top"/>
            <corners android:radius="@dimen/choiceInterest_radius"/>
        </shape>
    </item>

</selector>