<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E8FCE7"/>
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/square_bg_radius" android:topRightRadius="@dimen/square_bg_radius"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"
                     android:topLeftRadius="@dimen/square_bg_radius" android:topRightRadius="@dimen/square_bg_radius"/>
        </shape>
    </item>

</selector>